@page
@using FriendsWebApp.Models;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">My Friends</h1>
    <p>These are all my friends</p>
</div>

<p>
    <a asp-page="Create" class="btn btn-secondary">Add Friend</a>
</p>

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th></th>   
                    <th>First Name </th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Friend friend in Model.friends)
                {
                    <tr>
                        <td>
                            image here
                        </td>
                        <td>
                            @friend.FirstName
                        </td>
                        <td>
                            @friend.LastName
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        
    
    </div>

</div>

