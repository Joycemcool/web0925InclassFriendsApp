@page
@model FriendsWebApp.Pages.CreateModel
@{
}

<div class="text-center">
    <h1 class="display-4">Add New Friend</h1>
    <p>Add a friend</p>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype= "multipart/form-data">
        <div class="form-group">
            <label for="imageUpload">Image</label>
            <input type="file" asp-for="ImageUpload" class="form-control" />
        </div>


        <div class="form-group">
            <label for="FirstName">FirstName</label>
            <input type="text" asp-for="Friend.FirstName" class="form-control" />
        </div>

        <div class="form-group">
            <label for="LastName">LastName</label>
            <input type="text" asp-for="Friend.LastName" class="form-control" />
        </div>
        <br />

            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" /> 
                <a asp-page="Index">Cancel</a>

        </div>
        </form>
        
    </div>
</div>